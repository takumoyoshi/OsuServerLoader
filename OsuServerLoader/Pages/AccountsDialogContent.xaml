<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="OsuServerLoader.Pages.AccountsDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OsuServerLoader.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="8">
        <TextBox x:Name="TextBoxAccountTag"
                 PlaceholderText="Tag"
                 MinWidth="400" 
                 SelectionChanged="TextBoxAccountTagHandler"/>
        <TextBox x:Name="TextBoxAccountName"
                 PlaceholderText="Nickname"
                 MinWidth="400" 
                 SelectionChanged="TextBoxAccountNameHandler"/>
        <PasswordBox x:Name="PasswordBoxAccountPassword"
                 PlaceholderText="Password"
                 MinWidth="400"
                 PasswordChanged="PasswordBoxAccountPasswordHandler"/>
    </StackPanel>
</Page>
