<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="OkayuLoader.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OkayuLoader.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:ui="using:CommunityToolkit.WinUI"
    Margin="16,16,16,16">

    <Grid>
        <StackPanel Spacing="6">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Okayu Loader" Margin="0,0,0,16"/>
            
            <controls:SettingsCard x:ConnectionId='3' x:Name="Server"
                       Description="Choose the server where you want to play!"
                       Header="Server"
                       HeaderIcon="{ui:FontIcon Glyph=&#xF081;}"
                       IsEnabled="True">
                <ComboBox SelectedIndex="0">
                    <ComboBoxItem>Bancho</ComboBoxItem>
                    <ComboBoxItem>Okayu</ComboBoxItem>
                    <ComboBoxItem>Gatari</ComboBoxItem>
                </ComboBox>
            </controls:SettingsCard>

            <controls:SettingsCard x:ConnectionId='4' x:Name="Patcher"
               Description="Show misses and pp table with rx mode."
               Header="Enable patcher"
               HeaderIcon="{ui:FontIcon Glyph=&#xE943;}"
               IsEnabled="True">
                <ToggleSwitch />
            </controls:SettingsCard>
        </StackPanel>

        <Button x:ConnectionId='2' 
            Content="Run osu!" Style="{StaticResource AccentButtonStyle}"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch"
            x:Name="PlayOsuButton"
                                          
            IsEnabled="True"/>

    </Grid>
</Page>

