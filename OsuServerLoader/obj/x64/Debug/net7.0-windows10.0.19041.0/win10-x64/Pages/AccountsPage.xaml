<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="OkayuLoader.Pages.AccountsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OkayuLoader.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls">

    <Grid Margin="24,6,24,16">
        <StackPanel Spacing="6">
            <InfoBar x:ConnectionId='3' x:Name="InfoBarAccount"
                     IsOpen="False"
                     Severity="Error"
                     Title=""
                     Message="" />
            <controls:SettingsCard Header="Auto login" 
                                   Description="Run osu! with logged in account"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xE72E;}">
                <ToggleSwitch x:ConnectionId='8' x:Name="ToggleSwitchAccount"                                            />
            </controls:SettingsCard>
            <controls:SettingsExpander x:ConnectionId='4' Header="Account" 
                                       Description="Choose your account"
                                       HeaderIcon="{ui:FontIcon Glyph=&#xE748;}"
                                       x:Name="SettingsCardCustomAccount">
                <ComboBox x:ConnectionId='5' x:Name="ComboBoxAccount" SelectedIndex="0"                                              />
                <controls:SettingsExpander.Items>
                    <controls:SettingsCard x:ConnectionId='6' x:Name="SettingsCardDelete"
                                           Header="Delete account" 
                                           Description="Delete account from this list">
                        <Button x:ConnectionId='7' Content="Delete"                                    />
                    </controls:SettingsCard>
                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>
        </StackPanel>

        <Button x:ConnectionId='2' Content="Add account"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Stretch"
                x:Name="ButtonAddAccount"
                IsEnabled="True"
                                               />
    </Grid>
</Page>

